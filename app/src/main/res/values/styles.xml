<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!--items here can overwrite existing items from Material design  -->
        <item name="textAppearanceHeadline6">@style/CustomHeadline6</item>
    </style>

    <style name="home_title">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColorHint">@color/teal_200</item>
        <item name="android:textSize">20sp</item>
        <item name="lineSpacing">2dp</item>
    </style>

    <style name="about_content">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColorHint">@color/teal_200</item>
        <item name="android:textSize">20sp</item>
        <item name="lineSpacing">2dp</item>
    </style>

    <!-- Overwriting an element from the Theme in this Style-->
    <style name="CustomHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name = "android:textSize">18sp</item>
    </style>

    <style name="customThemeOverlayBlack" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColor">@color/black</item>"
    </style>

</resources>