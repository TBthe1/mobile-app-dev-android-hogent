<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--items here can overwrite existing items from Material design  -->
        <item name="textAppearanceHeadline5">@style/CustomHeadline5</item>
        <item name="textAppearanceHeadline6">@style/CustomHeadline6</item>
    </style>

    <style name="CustomHeadline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="about_content">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColorHint">@color/teal_200</item>
        <item name="android:textSize">20sp</item>
        <item name="lineSpacing">2dp</item>
    </style>


    <style name="customThemeOverlayBlack" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColor">@color/black</item>"
    </style>

    <!-- Buttons -->
    <style name="ButtonBig" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="ButtonFloating" parent="">
        <item name="backgroundTint">@color/primaryDarkColor</item>
    </style>

    <!-- EditText-->
    <style name="EditTextDefault" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">textPersonName</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <!-- Recyclerview -->
    <style name="TitleItemList">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>